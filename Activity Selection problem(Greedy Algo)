package com.company;


import java.util.Arrays;
import java.util.Comparator;

import static com.company.Main.ActivitySelectionProblem.printActivities;

public class Main {

    static class Activity{

        int start,finish;

        public Activity(int start,int finish)
        {
         this.start=start;
         this.finish=finish;

        }
    }

     static class Compare{

        static void compare(Activity arr[], int n)
        {
            Arrays.sort(arr, new Comparator<Activity>() {
                @Override
                public int compare(Activity s1, Activity s2) {
                    return s1.finish-s2.finish;
                }
            });
        }

    }

    static class ActivitySelectionProblem{

        static void printActivities(Activity arr[],int n) {

            Compare obj=new Compare();
            obj.compare(arr,n);
            System.out.println("Following Activities are selected :");

            int i=0;
                // The first activity always gets selected
                System.out.print("("+arr[i].start+","+arr[i].finish+"), ");


            for(int j=0;j<arr.length;j++)
            {
                 // Consider rest of the activities
                 // If this activity has start time greater than
                 // or equal to the finish time of previously
                 // selected activity, then select it

                 if(arr[j].start>=arr[i].finish) {

                     System.out.print("(" + arr[j].start + ", "
                             + arr[j].finish + "), ");
                     i=j;

                 }
             }
            }
    }

    public static void main(String[] args) {

        int n=6;

        Activity arr[]=new Activity[n];
        arr[0]=new Activity(5,9);
        arr[1]=new Activity(1,2);
        arr[2]=new Activity(3,4);
        arr[3]=new Activity(0,6);
        arr[4]=new Activity(5,7);
        arr[5]=new Activity(8,9);

        printActivities(arr,n);



    }
}
